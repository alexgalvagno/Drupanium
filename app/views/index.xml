<Alloy>
	<Window class="container">
		<Label id="userLb">Username:</Label>
		<TextField id="user"></TextField>
		<Label id="passLb">Password:</Label>
		<TextField id="pass"></TextField>
		<View layout="horizontal" height="Ti.UI.Size">
			<Button id="login" title="Login" onClick="login"></Button>
			<Button id="logout" title="Logout" onClick="logout"></Button>
		</View>
		<ActivityIndicator id="activityIndicator" message="Please Wait...Loging"></ActivityIndicator>
	</Window>
</Alloy>